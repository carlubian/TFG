<ContentDialog
    x:Class="TFG.UWP.Dialogs.ErrorValidacion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TFG.UWP.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="Aceptar"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    RequestedTheme="Dark" Background="#FF003C92">

    <Grid Background="Transparent">
        <StackPanel Orientation="Vertical">
            <TextBlock FontSize="20"
                   Text="Error de validación"
                   TextWrapping="Wrap"/>
            <TextBlock FontSize="16"
                   Text="El siguiente campo tiene un valor incorrecto. Por favor, revisa su formato y contenido:"
                   TextWrapping="Wrap"/>
            <TextBlock FontSize="16"
                   x:Name="FieldName"
                   TextWrapping="Wrap" Foreground="#FFECB300"/>
        </StackPanel>
    </Grid>
</ContentDialog>
